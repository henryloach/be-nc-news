{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [
      {
        "field": "author",
        "greenlist": null
      },
      {
        "field": "topic",
        "greenlist": null
      },
      {
        "field": "sort_by",
        "greenlist": [
          "created_at",
          "votes",
          "article_id",
          "author",
          "title",
          "topic"
        ]
      },
      {
        "field": "order",
        "greenlist": [
          "asc",
          "desc"
        ]
      }
    ],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 5,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "lurker",
          "name": "do_nothing",
          "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the article object with the requested id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 5,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "img url...",
        "comment_count": 6
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increments the votes field of the article object matching the requested id responding with the updated object",
    "queries": [],
    "exampleRequest": {
      "inc_votes": 10
    },
    "exampleResponse": {
      "article": {
        "article_id": 5,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 10,
        "article_img_url": "img url..."
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the comment and responds with no content",
    "queries": []
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array containing comments of the article matching the requested id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 3,
          "body": "body description",
          "article_id": 4,
          "author": "author name",
          "votes": 1,
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment for the requested id which is added to the database and responds with the posted comment",
    "queries": [],
    "exampleRequest": {
      "username": "lurker",
      "body": "An elephant never forgets."
    },
    "exampleResponse": {
      "comment_id": 19,
      "body": "An elephant never forgets.",
      "article_id": 9,
      "author": "lurker",
      "votes": 0,
      "created_at": "2018-05-30T15:59:13.341Z"
    }
  }
}